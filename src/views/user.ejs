<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>List User</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"
        integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p"
        crossorigin="anonymous"></script>
</head>


<body>
    <div class="container">
        <div class="row">
            <div class="user-infor-container">
                <form action="/users/create-user" method="post">

                    <div class="mb-3 mt-3">
                        <h3>Create User With Express js</h3>
                    </div>
                    <div class="mb-3 ml-2 mt-3 col-6">
                        <label for="email" class="form-label">Email address</label>
                        <input type="email" class="form-control" id="email" name="emailName"
                            aria-describedby="emailHelp">
                    </div>
                    <div class="col-6">

                    </div>
                    <div class="mb-3 ml-2 col-6">
                        <label for="password" class="form-label">Password</label>
                        <input type="password" class="form-control" id="password" name="password">
                    </div>
                    <div class="col-6">

                    </div>
                    <div class="mb-3 ml-2 col-6">
                        <label for="username" class="form-label">username</label>
                        <input type="text" class="form-control" id="username" name="userName">
                    </div>

                    <div class="col-12">
                        <button type="submit" class="btn btn-primary">Submit</button>
                    </div>

                </form>
                <div>

                    <ul>

                    </ul>
                </div>
                <div class="table-user mt-3">
                    <h3>Table user</h3>
                    <h4></h4>
                    <table class="table table-hover table-bordered">
                        <thead>
                            <tr>
                                <th scope="col">#</th>
                                <th scope="col">Email</th>
                                <th scope="col">Username</th>
                                <th scope="col">Action</th>
                            </tr>
                        </thead>
                        <tbody>
                            <% dataUserList.forEach(function(item,index){ %>
                                <tr>
                                    <th scope="row">
                                        <%= index +1 %>
                                    </th>
                                    <td>
                                        <%= item.email %>
                                    </td>
                                    <td>
                                        <%= item.username %>
                                    </td>
                                    <td>
                                        <div>


                                            <a class="btn btn-warning" style="display: inline;"
                                                href="/update-user/<%=item.id%> ">Edit</a>
                                            <form action=" /delete-user/<%=item.id%>" method="post"
                                                style="display: inline;">
                                                <button type="submit" class="btn btn-danger">Delete</button>

                                            </form>
                                        </div>
                                    </td>

                                    <% }) %>
                                </tr>
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</body>

</html>